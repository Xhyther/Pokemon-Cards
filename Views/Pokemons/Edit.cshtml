@model Pokedex.Models.Pokemon

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl" class="control-label"></label>
                <input asp-for="ImgUrl" class="form-control" />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Select Types</h4>
                <br />
                <div class="d-flex align-content-start  flex-wrap">
                    @foreach (var type in ViewBag.Types)
                    {
                        <div>
                            <input type="checkbox" name="selectedTypeIds" value="@type.Value" />
                            @type.Text
                        </div>
                    }

                </div>
            </div>
            <br />
            <div class="form-group">
                <h4>Select Moves</h4>
                <br />
                <div class="d-flex align-content-start flex-wrap">
                    @foreach (var move in ViewBag.Moves)
                    {
                        <div>
                            <input type="checkbox" name="selectedMoveIds" value="@move.Value" />
                            @move.Text
                        </div>
                    }
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="control-label" style="width:50rem; height: auto;"></textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i value="Create" type="submit" class="bi bi-check-square-fill" style="font-size: 2.5rem; color: #C41E3A;"></i>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="bi bi-box-arrow-left" style="font-size: 2.5rem; color: #000000;"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
